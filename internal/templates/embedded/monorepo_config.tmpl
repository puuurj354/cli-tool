package shared

import "os"

type Config struct {
	APIPort        string
	WorkerInterval int
	Environment    string
}

func LoadConfig() *Config {
	return &Config{
		APIPort:        getEnv("API_PORT", ":8080"),
		WorkerInterval: 5,
		Environment:    getEnv("ENV", "development"),
	}
}

func getEnv(key, def string) string {
	if val := os.Getenv(key); val != "" { return val }
	return def
}
