package sorting

import (
	"reflect"
	"testing"
)

func TestBubbleSort(t *testing.T) {
	tests := []struct {
		input []int
		want  []int
	}{
		{[]int{5, 2, 8, 1, 9}, []int{1, 2, 5, 8, 9}},
		{[]int{1, 2, 3}, []int{1, 2, 3}},
		{[]int{3, 2, 1}, []int{1, 2, 3}},
		{[]int{}, []int{}},
	}

	for _, tt := range tests {
		got := BubbleSort(tt.input)
		if !reflect.DeepEqual(got, tt.want) {
			t.Errorf("BubbleSort(%v) = %v; want %v", tt.input, got, tt.want)
		}
	}
}

