* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 20px;
}

.container {
    max-width: 800px;
    margin: 0 auto;
}

h1 {
    color: white;
    text-align: center;
    margin-bottom: 10px;
}

h1 + p {
    color: rgba(255, 255, 255, 0.9);
    text-align: center;
    margin-bottom: 30px;
}

.card {
    background: white;
    padding: 20px;
    margin-bottom: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.card h2 {
    color: #667eea;
    margin-bottom: 15px;
}

.highlight {
    border-left: 4px solid #667eea;
}

button {
    background: #667eea;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    margin-right: 10px;
    margin-bottom: 10px;
    transition: background 0.3s;
}

button:hover {
    background: #5568d3;
}

button:active {
    transform: scale(0.98);
}

input[type="text"] {
    padding: 10px;
    border: 2px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    margin-right: 10px;
    margin-bottom: 10px;
    width: calc(100% - 20px);
    max-width: 300px;
}

input[type="text"]:focus {
    outline: none;
    border-color: #667eea;
}

#demo-text {
    padding: 15px;
    background: #f8f9fa;
    border-radius: 4px;
    margin-bottom: 10px;
}

.box {
    width: 200px;
    height: 100px;
    background: #e9ecef;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    margin-bottom: 10px;
    transition: all 0.3s;
}

.box.active {
    background: #48bb78;
    color: white;
    transform: scale(1.1);
}

ul {
    list-style: none;
    margin-top: 10px;
}

li {
    background: #f8f9fa;
    padding: 10px;
    margin-bottom: 5px;
    border-radius: 4px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.2s;
}

li:hover {
    background: #e9ecef;
}

li button {
    background: #dc3545;
    padding: 5px 10px;
    font-size: 12px;
    margin: 0;
}

li button:hover {
    background: #c82333;
}

.done {
    text-decoration: line-through;
    opacity: 0.6;
}
