* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 20px;
}

.container {
    max-width: 900px;
    margin: 0 auto;
}

h1 {
    color: white;
    text-align: center;
    margin-bottom: 10px;
}

h1 + p {
    color: rgba(255, 255, 255, 0.9);
    text-align: center;
    margin-bottom: 30px;
}

.card {
    background: white;
    padding: 20px;
    margin-bottom: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.card h2 {
    color: #667eea;
    margin-bottom: 15px;
}

.highlight {
    border-left: 4px solid #667eea;
}

button {
    background: #667eea;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    margin-right: 10px;
    margin-bottom: 10px;
    transition: background 0.3s;
}

button:hover {
    background: #5568d3;
}

input[type="text"] {
    padding: 10px;
    border: 2px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    margin-right: 10px;
    margin-bottom: 10px;
    min-width: 200px;
}

.output {
    margin-top: 15px;
    padding: 15px;
    background: #f8f9fa;
    border-radius: 4px;
    min-height: 50px;
}

.user-item,
.post-item {
    background: white;
    padding: 15px;
    margin-bottom: 10px;
    border-radius: 4px;
    border-left: 3px solid #667eea;
}

.user-item p,
.post-item p {
    margin: 5px 0;
    color: #666;
}

.post-item h3 {
    color: #333;
    margin-bottom: 10px;
    font-size: 16px;
}

.error {
    color: #dc3545;
    padding: 10px;
    background: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: 4px;
}

.success {
    color: #155724;
    padding: 15px;
    background: #d4edda;
    border: 1px solid #c3e6cb;
    border-radius: 4px;
}

.user-card {
    margin-top: 15px;
}

.user-profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    background: #f8f9fa;
    border-radius: 8px;
}

.user-profile img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    margin-bottom: 15px;
    border: 4px solid #667eea;
}

.user-profile h3 {
    color: #333;
    margin-bottom: 10px;
}

.user-profile p {
    margin: 5px 0;
    color: #666;
}

pre {
    background: #2d2d2d;
    color: #f8f8f2;
    padding: 15px;
    border-radius: 4px;
    overflow-x: auto;
    font-size: 13px;
    line-height: 1.5;
}

code {
    font-family: 'Courier New', Courier, monospace;
}

@media (max-width: 768px) {
    .container {
        padding: 10px;
    }
    
    .card {
        padding: 15px;
    }
    
    input[type="text"] {
        display: block;
        width: 100%;
        margin-bottom: 10px;
    }
}
