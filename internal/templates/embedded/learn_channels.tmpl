package main

import "fmt"

func main() {
	// Unbuffered channel
	ch := make(chan string)
	go func() {
		ch <- "Hello from channel!"
	}()
	msg := <-ch
	fmt.Println(msg)

	// Buffered channel
	buffered := make(chan int, 3)
	buffered <- 1
	buffered <- 2
	buffered <- 3
	fmt.Println(<-buffered, <-buffered, <-buffered)

	// Channel with range
	numbers := make(chan int)
	go func() {
		for i := 1; i <= 5; i++ {
			numbers <- i
		}
		close(numbers)
	}()
	for n := range numbers {
		fmt.Printf("Received: %d\n", n)
	}

	// Channel direction (send-only, receive-only)
	ping := make(chan string, 1)
	pong := make(chan string, 1)
	pingPong(ping, pong)
}

